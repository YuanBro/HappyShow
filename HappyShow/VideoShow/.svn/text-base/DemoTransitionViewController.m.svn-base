-(IBAction)addFilter:(id)sender{
    UIAlertController * pv = [UIAlertController alertControllerWithTitle:@"Transition" message:@"add Transition, 必须要2个以上的Clip" preferredStyle:UIAlertControllerStyleAlert];
    [pv addTextFieldWithConfigurationHandler:^(UITextField * _Nonnull textField) {
        textField.placeholder = @"Clip Index";
    }];
    
    [pv addTextFieldWithConfigurationHandler:^(UITextField * _Nonnull textField) {
        textField.placeholder = @"Effect ID";
    }];
    
    UIAlertAction * action = [UIAlertAction actionWithTitle:@"OK" style:UIAlertActionStyleDefault handler:^(UIAlertAction * _Nonnull action) {
        
        int index = [pv.textFields[0].text intValue];
        qxTrack * track = [_timeline getTrackFromTimeline:0];
        
        if (index >= track.mpMediaObjArray.count || index < 0){
            [self showToast:@"Clip Index不对"];
        }
        else{
            int index1 = [pv.textFields[1].text intValue];
            if (index1 <= eTrans_None || index1 >= eTrans_Count) {
                [self showToast:@"Transition Id不对"];
            }
            else{
                qxMediaObject * obj = track.mpMediaObjArray[index];
                [track setTranstion:index1 duration:1000 atClip:obj beforeOrAfter:NO];
            }
        }
    }];
    [pv addAction:action];
    [self presentViewController:pv animated:YES completion:nil];
}

-(IBAction)showFilter:(id)sender{
    NSString * str = @"";
    qxTrack * track = [_timeline getTrackFromTimeline:0];
    int index = 0;
    for (qxMediaObject * obj in track.mpMediaObjArray) {
        if (obj.eType == eMT_Transition){
            str = [str stringByAppendingString:[NSString stringWithFormat:@"片段%d, 滤镜Name:%@\n", index, [[qxEffectMgr sharedInstance] getTransitionNameById:obj.transition_def]]];
        }
        index ++;
    }
    UIAlertController * pv = [UIAlertController alertControllerWithTitle:@"Filter" message:str preferredStyle:UIAlertControllerStyleAlert];
    UIAlertAction * action = [UIAlertAction actionWithTitle:@"OK" style:UIAlertActionStyleDefault handler:^(UIAlertAction * _Nonnull action) {
        
    }];
    [pv addAction:action];
    [self presentViewController:pv animated:YES completion:nil];
}

-(IBAction)removeFilter:(id)sender{
    qxTrack * track = [_timeline getTrackFromTimeline:0];
    NSMutableArray * array = [NSMutableArray array];
    for (qxMediaObject * obj in track.mpMediaObjArray) {
        if (obj.eType == eMT_Transition){
            [array addObject:obj];
        }
    }
    
    for (qxMediaObject * obj in array) {
        [track removeTransition:obj];
    }
}

-(IBAction)closeAction:(id)sender{
    if (_delegate){
        [_delegate videoEdit:self type:EditTypeTransition editFlag:YES];
    }
    [self dismissViewControllerAnimated:YES completion:nil];
}

-(void)showToast:(NSString*)str{
    MBProgressHUD* hud = [MBProgressHUD showHUDAddedTo:self.view animated:YES];
    hud.labelText = str;
    [self performSelector:@selector(hideHud) withObject:self afterDelay:1.5];
}

-(void)hideHud{
    [MBProgressHUD hideHUDForView:self.view animated:NO];
}

@end
